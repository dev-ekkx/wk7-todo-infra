{
  "family": "todo-app-task",
  "executionRoleArn": "arn:aws:iam::124355655853:role/todo-app-ecs-task-execution-role",
  "taskRoleArn": "arn:aws:iam::124355655853:role/todo-app-ecs-task-role",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "todo-app-container",
      "image": "124355655853.dkr.ecr.eu-west-1.amazonaws.com/wk-7-todo-app-repo:latest",
      "portMappings": [
        {
          "containerPort": 8081,
          "hostPort": 8081,
          "protocol": "http"
        }
      ],
      "environment": [
        {
            "name": "AWS_REGION",
            "value": "eu-west-1"
        },
        {
            "name": "PORT",
            "value": "8080"
        },
        {
            "name": "GIN_MODE",
            "value": "release"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/todo-app",
          "awslogs-region": "eu-west-1",
          "awslogs-create-group": "true",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8081 || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}